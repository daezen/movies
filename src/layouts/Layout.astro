---
import '@fontsource/poppins'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="bg-zinc-950">
    <slot />
  </body>
</html>
<style is:global>
  html {
    color: white;
    font-family: 'Poppins', sans-serif;
  }
</style>
